<UserControl x:Class="ClipEnhancer.Views.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource PrimaryBackground}">
    <Grid>
        <Border Background="{StaticResource CardBackground}" CornerRadius="10" Padding="32" Margin="40,40,40,40" VerticalAlignment="Top" >
            <StackPanel>
                <TextBlock Text="Welcome to Clip Enhancer" FontSize="28" FontWeight="SemiBold" Foreground="{StaticResource PrimaryText}" Margin="0,0,0,16"/>
                <TextBlock Text="Enhance your clipboard text with AI-powered grammar and style checks. Just copy text with a tag, and let the app do the rest!" 
                           FontSize="15" Foreground="{StaticResource SecondaryText}" TextWrapping="Wrap" Margin="0,0,0,24"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                    <TextBlock Text="Clipboard Status: " FontWeight="SemiBold" Foreground="{StaticResource PrimaryText}"/>
                    <TextBlock x:Name="ClipboardStatusText" Text="Ready" Foreground="{StaticResource SuccessGreen}"/>
                </StackPanel>
                <StackPanel Orientation="Vertical" Margin="0,0,0,16">
                    <TextBlock Text="Last Processed Text:" FontWeight="SemiBold" Foreground="{StaticResource PrimaryText}"/>
                    <TextBlock x:Name="LastProcessedText" Text="(None yet)" Foreground="{StaticResource SecondaryText}" TextWrapping="Wrap"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl> 