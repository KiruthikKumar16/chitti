<UserControl x:Class="ClipEnhancer.Views.HistoryPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:ClipEnhancer.Converters"
             Background="{StaticResource PrimaryBackground}">
    <UserControl.Resources>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        
        <!-- ListView Item Style -->
        <Style TargetType="ListViewItem">
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource CardBackground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Processing History" 
                      FontSize="28" 
                      FontWeight="SemiBold" 
                      Foreground="{StaticResource PrimaryText}"/>
            <TextBlock Text="View and filter your clipboard enhancement history" 
                      FontSize="14"
                      Foreground="{StaticResource SecondaryText}"
                      Margin="0,8,0,0"/>
        </StackPanel>

        <!-- Filters -->
        <Grid Grid.Row="1" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="StatusFilter" 
                         Width="140" 
                         Height="36"
                         VerticalContentAlignment="Center"
                         Background="White"
                         BorderBrush="#E0E0E0"
                         BorderThickness="1"
                         Margin="0,0,12,0"/>
                
                <ComboBox x:Name="TagFilter" 
                         Width="140" 
                         Height="36"
                         VerticalContentAlignment="Center"
                         Background="White"
                         BorderBrush="#E0E0E0"
                         BorderThickness="1"
                         Margin="0,0,12,0"/>
                
                <DatePicker x:Name="DateFilter" 
                           Width="140" 
                           Height="36"
                           VerticalContentAlignment="Center"
                           Background="White"
                           BorderBrush="#E0E0E0"
                           BorderThickness="1"/>
            </StackPanel>

            <StackPanel Grid.Column="1" 
                        Orientation="Horizontal">
                <Button Content="Apply Filters" 
                        Background="{StaticResource AccentBlue}"
                        Foreground="White"
                        Height="36"
                        Padding="16,0"
                        Margin="0,0,12,0"
                        Click="ApplyFilters_Click"/>
                
                <Button Content="Clear Filters" 
                        Background="{StaticResource SecondaryText}"
                        Foreground="White"
                        Height="36"
                        Padding="16,0"
                        Click="ClearFilters_Click"/>
            </StackPanel>
        </Grid>

        <!-- History List -->
        <Border Grid.Row="2" 
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="8">
            <ListView x:Name="HistoryListView" 
                      Background="Transparent"
                      BorderThickness="0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Timestamp" Width="160">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Timestamp" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource PrimaryText}"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Timestamp, StringFormat=yyyy-MM-dd HH:mm:ss}" 
                                             Foreground="{StaticResource PrimaryText}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        
                        <GridViewColumn Header="Tags" Width="120">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Tags" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource PrimaryText}"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Tags}" 
                                             Foreground="{StaticResource PrimaryText}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        
                        <GridViewColumn Header="Status" Width="100">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Status" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource PrimaryText}"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                            CornerRadius="4"
                                            Padding="8,4">
                                        <TextBlock Text="{Binding Status}" 
                                                 Foreground="White"
                                                 HorizontalAlignment="Center"/>
                                    </Border>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        
                        <GridViewColumn Header="Original Text" Width="250">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Original Text" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource PrimaryText}"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding OriginalText}" 
                                             TextTrimming="CharacterEllipsis"
                                             Foreground="{StaticResource PrimaryText}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        
                        <GridViewColumn Header="Processed Text" Width="250">
                            <GridViewColumn.HeaderTemplate>
                                <DataTemplate>
                                    <TextBlock Text="Processed Text" 
                                             FontWeight="SemiBold"
                                             Foreground="{StaticResource PrimaryText}"/>
                                </DataTemplate>
                            </GridViewColumn.HeaderTemplate>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ProcessedText}" 
                                             TextTrimming="CharacterEllipsis"
                                             Foreground="{StaticResource PrimaryText}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
        </Border>
    </Grid>
</UserControl> 